<p id="notice"><%= notice %></p>

<h1>Articles</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Header</th>
      <th>Body</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
  <%i= -1%>
    <% @articles.each do |article| %>
      <tr>
      <%i += 1%>
        <td><%= article.title %></td>
        <td><%= article.header %></td>
        <td><%= article.body %></td>
        <td><%= article.created_at %></td>
        <td><%= @commentscount[i] %></td>
        <td><%= link_to 'Noticia completa', article %></td>
        <td><%= link_to 'Editar', edit_article_path(article) %></td>
        <td><%= link_to 'Eliminar', article, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Article', new_article_path %>
