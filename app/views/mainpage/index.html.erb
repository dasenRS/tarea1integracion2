<h1>Noticias del Korte</h1>
<p>las mejores noticias de la vida</p>

<body>
	<%= link_to "administrador", articles_path%>
	<table>
  		<thead>
    		<tr>
      			<th>Title</th>
      			<th>Header</th>
      			<th>Body</th>
      			<th colspan="3"></th>
    		</tr>
  		</thead>

	  <tbody>
	    <% @articles.each_with_index do |article, index| %>
	      <tr>
	        <td><%= article.title %></td>
	        <td><%= article.header %></td>
	        <td><%= article.body %></td>
	        <td><%= article.created_at %></td>
	        <td><%= @commentscount[index] %></td>
	        <td><%= link_to 'Noticia completa', article %></td>
	      </tr>
	    <% end %>
	  </tbody>
	</table>
</body>
